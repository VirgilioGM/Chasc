        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="user.del" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UsersMain" android:screenOrientation="portrait"/>
        <activity android:name=".UsersOneForm" android:screenOrientation="portrait"/>
        <activity android:name=".UsersOneNfcForm" android:screenOrientation="portrait"/>
        <activity android:name=".UsersOneScheduleForm" android:screenOrientation="portrait"/>
        <activity android:name=".UsersOneScheduleMain" android:screenOrientation="portrait"/>
        <activity android:name=".UsersScheduleMain" android:screenOrientation="portrait"/>
        <activity android:name=".PublicMain" android:screenOrientation="portrait"/>
    </application>

</manifest>